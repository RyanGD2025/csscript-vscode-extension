{
  "scopeName": "source.csscript",
  "fileTypes": [
    "csscript"
  ],
  "name": "CSScript",
  "patterns": [
    {
      "name": "comment.line.double-slash.csscript",
      "match": "//.*$"
    },
    {
      "name": "string.quoted.double.csscript",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.csscript",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "keyword.control.csscript",
      "match": "\\b(if|else|return|while|do)\\b"
    },
    {
      "name": "storage.type.csscript",
      "match": "\\b(local|function|class)\\b"
    },
    {
      "name": "constant.language.boolean.csscript",
      "match": "\\b(true|false)\\b"
    },
    {
      "name": "constant.numeric.csscript",
      "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
    },
    {
      "name": "support.function.csscript",
      "match": "\\b(main|System|print\\.log\\.Console|add|move|rotate|scale|destroy|GetChildren|GetService|WaitForChild)\\b(?=\\s*\\()"
    },
    {
      "name": "variable.other.property.csscript",
      "match": "\\. (Image|Parent|Color|Name|Pos|Size|Anchored)\\b"
    },
    {
      "name": "keyword.operator.assignment.csscript",
      "match": "="
    },
    {
      "name": "keyword.operator.arithmetic.csscript",
      "match": "(\\+|\\-|\\*|\\/|\\%|\\>|\\<|\\>\\=|\\<\\=|\\=\\=|\\!\\=)"
    },
    {
      "name": "punctuation.definition.block.csscript",
      "match": "[\\{\\}]"
    },
    {
      "name": "punctuation.section.parens.csscript",
      "match": "[\\(\\)]"
    }
  ]
}
